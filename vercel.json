{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "yarn build:staging",
        "outputDirectory": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://api.fechatter.com/api/$1"
    },
    {
      "source": "/events(.*)",
      "destination": "https://api.fechatter.com/events$1"
    },
    {
      "source": "/files/(.*)",
      "destination": "https://api.fechatter.com/files/$1"
    },
    {
      "source": "/presence(.*)",
      "destination": "https://api.fechatter.com/presence$1"
    },
    {
      "source": "/health(.*)",
      "destination": "https://api.fechatter.com/health$1"
    },
    {
      "source": "/notify(.*)",
      "destination": "https://api.fechatter.com/notify$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "ngrok-skip-browser-warning",
          "value": "true"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Environment",
          "value": "development"
        },
        {
          "key": "X-Build-Mode", 
          "value": "staging"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "development",
    "VITE_APP_ENV": "development",
    "VITE_API_URL": "https://api.fechatter.com/api",
    "VITE_SSE_ENDPOINT": "/events",
    "VITE_ENABLE_DEBUG": "true"
  }
}
