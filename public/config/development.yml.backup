# Fechatter Frontend - Development Configuration
# 开发环境：通过Vite代理访问HTTPS后端服务

app:
  name: "Fechatter"
  version: "1.0.0"
  environment: "development"
  debug: true

# 前端服务器配置
frontend:
  port: 5173 # Vite默认端口
  host: "localhost"
  hmr_port: 1421

# API配置 - 直接连接 ngrok 后端
api:
  # 直接连接 ngrok，避免 Vercel 代理限制
  gateway_url: "https://e277-45-77-178-85.ngrok-free.app"

  # 直接 ngrok URLs - 所有环境统一策略
  base_url: "https://e277-45-77-178-85.ngrok-free.app/api"
  file_url: "https://e277-45-77-178-85.ngrok-free.app/files"
  sse_url: "https://e277-45-77-178-85.ngrok-free.app/events"
  notify_url: "https://e277-45-77-178-85.ngrok-free.app/notify"

  # 请求配置
  timeout: 30000
  max_retries: 3
  retry_delay: 1000

# CORS配置 - 支持本地开发和Vercel部署
cors:
  enabled: true
  origins:
  - "http://localhost:5173" # Vite开发端口
  - "http://localhost:1420" # 备用端口
  - "http://127.0.0.1:5173"
  - "https://fechatter-frontend-kto9xf8u5-zhkevin46-gmailcoms-projects.vercel.app" # 最新部署域名
  - "https://fechatter-frontend-j19109swu-zhkevin46-gmailcoms-projects.vercel.app"
  - "https://fechatter-frontend-cahw21vjh-zhkevin46-gmailcoms-projects.vercel.app"
  - "https://*.vercel.app" # 所有Vercel部署域名
  credentials: true

# 开发工具
dev_tools:
  enable_devtools: true
  enable_source_maps: true
  hot_reload: true

# 日志配置
logging:
  level: "debug"
  enable_network_logs: true
  enable_api_logs: true

# 测试账户配置 - 开发环境快速登录
test_accounts:
- email: "test@fechatter.com"
  password: "test123"
  name: "Test User"
  description: "主要测试账户"
- email: "dev@fechatter.com"
  password: "dev123"
  name: "Dev User"
  description: "开发测试账户"
- email: "admin@fechatter.com"
  password: "admin123"
  name: "Admin User"
  description: "管理员测试账户"

# 🔧 SSE Configuration
sse:
  base_url: "https://e277-45-77-178-85.ngrok-free.app"
  endpoint: "/events"
  reconnect_interval: 3000
  max_reconnect_attempts: 5
  timeout: 30000
  heartbeat_interval: 30000

# 🎯 File Service Configuration  
files:
  base_url: "https://e277-45-77-178-85.ngrok-free.app"
  upload_endpoint: "/api/files/single"
  download_endpoint: "/api/files/download"
  static_endpoint: "/files"
  max_file_size: 10485760 # 10MB
  allowed_types: [ "image/*", "application/pdf", "text/*" ]

# 🔐 Authentication Configuration
auth:
  token_refresh_threshold: 300000 # 5 minutes
  auto_refresh: true
  storage_key: "fechatter_auth_token"

# 🚀 Analytics Configuration
analytics:
  enabled: true
  endpoint: "https://e277-45-77-178-85.ngrok-free.app/analytics"
  batch_size: 10
  flush_interval: 5000

# 🔧 Feature Flags
features:
  enhanced_search: true
  file_preview: true
  markdown_support: true
  code_highlighting: true
  emoji_reactions: true
  typing_indicators: true
  message_threading: false
  voice_messages: false

# 🎨 UI Configuration
ui:
  theme: "light"
  compact_mode: false
  show_timestamps: true
  show_avatars: true
  enable_animations: true
  sidebar_collapsed: false

# 🐛 Debug Configuration
debug:
  enabled: true
  log_level: "info"
  show_network_logs: true
  show_state_changes: false
  performance_monitoring: true

# 🔄 Cache Configuration
cache:
  api_cache_duration: 300000 # 5 minutes
  image_cache_duration: 3600000 # 1 hour
  user_cache_duration: 1800000 # 30 minutes
  enable_offline_cache: true

